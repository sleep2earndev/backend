generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum version{
  ONE
  TWO
}
model UserApps{
  owner String @unique @id
  fullName String
  claimInfo Json
  // signedClaim Json
  // signatures String
  sleep SleepData[]
}

model SleepData{
  idSleep Int @unique @default(autoincrement())
  dateOfSleep String 
  duration Int
  endTime String @unique
  claimInfo Json
  startTime String @unique
  summary Json
  version version
  // signedClaim Json
  // signatures String
  ownersleep String
  ownerRef UserApps @relation(fields: [ownersleep],references: [owner], onDelete: Cascade, onUpdate: Cascade)
  userId String
  earning Int
}

model totalEarning{
  userId String @unique @id
  totalEarn Int
}

